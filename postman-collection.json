{
    "info": {
        "name": "B1 BFF Dynamic API",
        "description": "Postman collection for testing B1 BFF Dynamic endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:4000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "health"
                    ]
                },
                "description": "Health check endpoint - no authentication required"
            }
        },
        {
            "name": "Root Endpoint",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        ""
                    ]
                },
                "description": "Root endpoint showing API information"
            }
        },
        {
            "name": "Get Items",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/items",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "items"
                    ]
                },
                "description": "Get list of items - requires authentication"
            }
        },
        {
            "name": "Get Business Partners",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/business-partners",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "business-partners"
                    ]
                },
                "description": "Get list of business partners - requires authentication"
            }
        },
        {
            "name": "Create Order",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"CustomerID\": \"C001\",\n  \"Items\": [\n    {\n      \"ItemID\": \"I001\",\n      \"Quantity\": 10\n    }\n  ]\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/orders",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders"
                    ]
                },
                "description": "Create a new order - requires authentication"
            }
        }
    ]
}